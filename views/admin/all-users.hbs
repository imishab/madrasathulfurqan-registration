<div class="page-content-wrapper">
    <div class="container-lg">
        <h4>Manage Registered Students</h4>

        <div class="card shadow mt-3">
            <div class="card-body">
                {{!-- <a href="/admin/remove-all-users"
                    onclick="return confirm('Are You Sure to Delete All Students ?')" class="btn btn-danger mb-2">Delete
                    All Students</a> --}}
                <div style="overflow-x: auto;">

                    <table class="w-100" id="dataTable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Reg ID</th>
                                <th>Photo</th>
                                <th>Full Name</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>View</th>
                                <th>Delete</th>



                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{this.regid}}</td>

                                <td>
                                    <a href="/images/user-profiles/{{this._id}}.png">
                                        <img src="/images/user-profiles/{{this._id}}.png" width="100px" alt="">
                                    </a>
                                </td>
                                <td>{{this.fname}} {{this.lname}}</td>
                                <td>{{this.mobile}}</td>
                                <td>{{this.email}}</td>
                                <td><a href="/admin/view-more/{{this._id}}" class="btn btn-dark btn-sm">View Full
                                        Details</a></td>
                                <td><a href="/admin/remove-user/{{this._id}}" class="btn btn-danger"
                                        onclick="return confirm('Are You Sure to Delete {{this.fname}} ?')"><svg
                                            xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                            <path
                                                d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                        </svg></a>
                                </td>

                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>